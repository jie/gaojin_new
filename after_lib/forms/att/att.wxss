@import "../afform.wxss";

.af-uploader {
  min-height: 80rpx;
  border: 1px dashed #ccc;
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 85%;
  color: #999;
  position: relative;
}

.att-plus {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 5rpx;
  right: 5rpx;
}
.af-att-limitation {
  vertical-align: middle;
  font-size: 85%
}

.af-uploaded-item {
  font-size: 12px;
  color: #666;
  margin-top: 5px;
}