/* libs/components/popup/popup.wxss *//* component/popup.wxss */
@import "../../wxParse/wxParse.wxss";
.wx-popup {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  text-align: center;
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
 
  width: 80%;
  max-width: 600rpx;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}
.wx-popup-title {
  width: 100%;
  text-align: center;
  font-size: 26rpx;
}
.wx-popup-con {
  margin: 60rpx 10rpx;
  text-align: center;
}
.wx-popup-btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}
.wx-popup-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 88rpx;
  border: 2rpx solid #ccc;
  border-radius: 88rpx;
}
.img-close{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  
}
.popup-head{
  height: 60rpx;

}
.m-i-img{
  width: 140rpx;
  height: 140rpx;
  border-radius: 40pt;

}

.wx-popup-name{
  color: #b6a37e;
  font-size: 32rpx;
}

.empty-line{
  padding: 1rpx;
  background-color: #b6a37e;
  width: 40%;
  margin: 7rpx auto;
  
}

.wx-popup-content{
  font-size: 26rpx;
  text-align: justify;
  max-height: 625rpx;
  padding: 10px 20px;
  padding-top: 5px;

}
.popup-content-content{
  width: 86%;
  color: #666;
  text-align: justify;

}

.img-box{
  text-align: center;
}
 
.wxParse-p{
  margin-bottom: 10px;
}

.wxParse-img{
  width: 100%;
}
