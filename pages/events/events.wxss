/* pages/events/events.wxss */

@import '../../assets/base.wxss';
.page {
  position: relative;
  font-size: 26rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  overflow-x: hidden;
}

.page.locked {
  height: 100vh;
  overflow-y: hidden;
  background-color: #f5f5f5;
}

.page .header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-bottom: 2rpx solid #f5f5f5;
}

/* .page .header-close {
  overflow-y: scroll;
} */

/* .page .header-open {
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  z-index: 1
} */

.page .header-open .searchOptions {
  overflow-y: scroll;
  max-height: 400rpx;
  background-color: #fff;
}

.page .searchbar {
  background-color: #fff;
}

.page .searchOption {
  padding: 20rpx 40rpx;
  font-size: 90%;
}

.page .searchbar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.page .searchbar .searchbtn {
  flex: 1;
  text-align: center;
}

.page .events {
  margin-top: 90rpx;
}

.page .event {
  display: flex;
}

.page .event:last-child {
  margin-bottom: 0;
}

.page .content {
  flex: 1;
  margin-left: 20rpx;
}

.page .content .title {
  color: #333;
  cursor: pointer;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.page .meta {
  font-size: 90%;
  color: #999;
  margin-top: 5px;
}

.ico {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}

.create_at {
  margin-top: 5px;
}

.location, .create_at {
  min-height: 30rpx;
  line-height: 30rpx;
  margin-top: 10rpx;
}

.location text, .create_at text {
  margin-left: 10rpx;
}

.footer {
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 60rpx;
  border-top: 2rpx solid #ddd;
  margin-left: 80rpx;
  margin-right: 80rpx;
}

.footer text {
  display: inline-block;
  width: 240rpx;
  height: 30rpx;
  text-align: center;
  font-size: 80%;
  position: fixed;
  left: 50%;
  margin-left: -100rpx;
  margin-top: -30rpx;
  color: #ccc;
  background-color: #f5f5f5;
  z-index: 0;
}

.empty {
  height: 100vh;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty text {
  color: #999;
}

.masker {
  background-color: rgba(0, 0, 0, 0.5);
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.triangle-bottomright {
  width: 0;
  height: 0;
  border-bottom: 40px solid #eee;
  border-left: 70px solid transparent;
  position: absolute;
  bottom: 0;
  right: 0;
}

.expired-text {
  position: absolute;
  bottom: 2px;
  right: 1px;
  color: #999;
  font-size: 80%;
  width: 40px;
  text-align: center;
}

.alayout {
  display: flex;
  width: 100%;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  position: relative;
}

.clayout {
  display: block;
  width: 100%;
  margin-bottom: 20px;
  background-color: #fff;
  border-radius: 4pt;
  overflow: hidden;
}

.clayout .thumb-img {
  width: 100%;
  /* height: 140pt; */
}

.clayout .thumb {
  width: 100%;
  /* height: 140pt; */
}

.alayout .thumb-img {
  width: 240rpx;
  max-height: 200rpx;
}

.clayout .title {
  font-size: 130%;
  color: #000;
}

.alayout .title {
  font-size: 110%;
}

.clayout .content {
  padding: 12px;
  margin-left: 0px;
}

.clayout .meta {
  margin-top: 10px;
}

.bgcurve {
  height: 1000px;
  width: 1000px;
  background-color: #2C2B31;
  border-radius: 1000px;
  position: fixed;
  top: -860px;
}

.bgcube {
  position: fixed;
  left: 16px;
  top: 50px;
  height: 90px;
  background-color: #f5f5f5;
  border-radius: 5px;
}

.clayout-events {
  margin: 16px;
  margin-top: 40px;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

