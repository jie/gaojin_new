.page {
  position: relative;
  font-size: 26rpx;
  background-color: #f5f5f5;
  min-height: 100vh;

}
.page.locked {
  height: 100vh;
  overflow-y: hidden
}

.page .header {
  width: 100%;
  background-color: #fff;
}

/* .page .header-close {
  overflow-y: scroll;
} */

/* .page .header-open {
  height: 100%;
