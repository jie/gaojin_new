@import '../../animate.wxss';

.bar {
  overflow-y: scroll;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10000;
}

.bar .wrapper {
  display: flex;
  /* background-color: #fff; */
  align-items: center;
  /* border-bottom: 1px solid #f5f5f5; */
  z-index: 100;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
}

.filterOptions {
  background-color: #fff;
  /* border-bottom: 1px solid #ddd; */
  position: absolute;
  left: 0;
  width: 100%;
  z-index: 99;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

.filterOption {
  height: 40px;
  line-height: 40px;
  box-sizing: border-box;
  font-size: 90%;
  padding-left: 20px;
}

.item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 10px;
  padding-right: 10px;
  max-width: calc(33.3333%);
}

.bar-label {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rotate-label {
  transform: rotate(-180deg);
}

.dark {
  background-color: rgba(0, 0, 0, 0.6);
}
