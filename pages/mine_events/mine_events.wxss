  z-index: 1
} */

.page .header-open .searchOptions {
  overflow-y: scroll;
  max-height: 400rpx;
  background-color: #fff;
}

.page .searchbar {
  background-color: #fff;
}
.page .searchOption {
  padding: 20rpx 40rpx;
  font-size: 90%;
}

.page .searchbar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.page .searchbar .searchbtn{
  flex: 1;
  text-align: center;
}

.page .events {
  margin-top: 30rpx;
}

.page .event {
  padding: 30rpx;
  background-color: #fff;
  display: flex;
}

.page .event:last-child {
  /* margin-bottom: 0 */
}

.page .thumb image {
  width: 240rpx;
  max-height: 200rpx;
}

.page .content {
  flex: 1;
  margin-left: 20rpx;
}

.page .content .title {
  font-size: 110%;
  /* font-weight: 500; */
  color: #333;
  cursor: pointer;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.page .meta {
  font-size: 90%;
  color: #999;
}

.ico {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}

.location, .create_at {
  min-height: 30rpx;
  line-height: 30rpx;
  margin-top: 10rpx;
}

.location text, .create_at text {
  margin-left: 10rpx;
}

.footer {
  height:60rpx;
  line-height: 60rpx;
  margin-top: 60rpx;
  border-top: 2rpx solid #ddd;
  margin-left:80rpx;
  margin-right: 80rpx;
}

.footer text {
  display: inline-block;
  width: 240rpx;
  height: 30rpx;
  text-align:center;
  font-size: 80%;
  position: absolute;
  left: 50%;
  margin-left: -100rpx;
  margin-top: -30rpx;
  color: #ccc;
  background-color: #f5f5f5;
  z-index: 0;
}

.empty {
  height:100vh;
  text-align:center;
  display:flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  margin-top: 60px;
}

.empty text {
  color: #999
}

.recent-events-btn {
  height: 36px;
  line-height: 36px;
  margin-top: 40px;
  border-radius: 3px;
  color: #999;
  background-color: #eee;
  padding-left: 20px;
  padding-right: 20px;
}


.masker {
  background-color: rgba(0,0,0,0.5); 
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.event-wrapper {
  margin-bottom: 20px;
  background-color: #fff;
}

.ticket-info {
  height: 40px;
  border-top: 1px solid #f5f5f5;
}

.ticket-btn {
  float: right;
  border:1px solid #21a1f9;
  box-sizing: border-box;
  background-color: #fff;
  color: #21a1f9;
  font-size: 80%;
  padding: 2px 5px;
  border-radius: 3px;
  margin-top: 10px;
  margin-right: 10px;
}