@import "../../libs/weui/weui.wxss";
@import "../../assets/style.wxss";
@import "../../assets/base.wxss";
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.weui-tab__panel {
  padding-top: 20px;
}

/*e-ticket*/
.e_ticket{
    padding: 30px 15px;
    max-width: 640px;
    margin: 0 auto;
    font-size: 12px;
}
.e_ticket_top_bg{
    background: #CCCCCC;
    height: 20px;
    border-radius: 10px;
}
.e_ticket_content{
    position: relative;
    top: -10px;
    background: #fff;
    margin: 0 10px;
    padding: 15px;
    padding-bottom: 0;
    box-shadow: 2px 2px 5px rgba(204,204,204,.5),
                -2px 2px 5px rgba(204,204,204,.5);
}
.e_ticket_content .form_title{
    font-size: 18px;
}
.qr_code{
    text-align: center;
    /* padding: 20px; */
}
.qr_code img{
    margin-bottom: 5px;
}
.qr_code span{
    color: #888;
    display: block;
}
.notice{
    border-top: 1px dashed #ccc;
    padding: 20px 0;
}
.notice .notice_title{
    margin-bottom: 8px;
}
.notice .notice_content{
    color: #888;
    line-height: 150%;
}

.e_ticket_footer{
    padding: 15px;
    text-align: center;
    color: #fff;
    background: #22A1F9;
    margin-left: -15px;
    margin-right: -15px;
}
.e_ticket_footer a{
    color: #fff;
}


.qrcode {
  width: 590rpx;
  margin: 0 auto;
  /* padding: 50rpx 0 59rpx; */
  border-top: 2rpx solid #F4F5F7;
}
.qrcode > view, .qrcode > text {
  text-align: center;
}
canvas {
  /* margin: 20rpx auto 0; */
  margin-top: 0;
  margin-left: auto;
  margin-right: auto;
}