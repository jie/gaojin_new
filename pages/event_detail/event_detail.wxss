@import "../../libs/weui/weui.wxss";
@import "../../assets/style.wxss";
@import "../../assets/base.wxss";
@import "../../libs/wxParse/wxParse.wxss";
.weui-tab__panel {
  padding-top: 0;
}
.event-view-page {
  background-color: #f5f5f5;
  font-size: 26rpx;
}

.footer {
  position:fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 116rpx;
  display: flex;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 3;
}

.footer .signup-btn{
  flex: 2;
  text-align: center;
  justify-content: center;
  align-items: center;
  height: 116rpx;
  line-height: 116rpx;
  color: #fff;
  background-color: #22a1f9;
  font-size: 140%;
  font-weight: bold;
}



.footer .share-btn{
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  height: 116rpx;
  color: #333;
  border: 0;
  border-top: 2rpx solid #ddd;
  background-color: #fff;
}

.share-btn text, .home-btn text {
  color: #333;
}

.share-btn-bg {
  border: 0;
  position: absolute;
  height: 100%;
  width:100rpx;
}

.footer .home-btn{
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  height: 116rpx;
  color: #8a8a8a;
  border-right: 2rpx solid #ddd;
  border-top: 1px solid #ddd;
  background-color: #fff;
}

.agenda_view li {
  display: block;
}


image.avatar {
  width: 46px;
  height: 46px;
  border-radius: 23px;
  margin-right: 20rpx;
  vertical-align: middle;
}

.guests.weui-cells {
  margin-top: 0
}

image.ico {
  width: 26rpx!important;
  height: 26rpx!important;
  margin-right: 10rpx!important;
  vertical-align:middle;
  display: inline-block!important;
  border-radius: 0!important;
}

.wxParse-p {
  padding-bottom:30rpx;
}

.wxParse-p:last-child {
  padding-bottom: 0;
}

.agenda {
  margin-bottom: 40rpx;
}
.agenda:last-child {
  margin-bottom: 0
}

.agenda_detail {
  white-space: pre-line;
}

.agenda_detail_item {
  display: block;
}

.arraw {
  width: 26rpx; 
  height: 26rpx;
  vertical-align: middle
}

.middle {
  vertical-align: middle
}

.view_info_desc p {
  margin-bottom: 10px;
}

.weui-cells.guests::before {
  border-top: 0
}



small {
  color: #22a1f9
}

.banner {
  width: 100%;
}


.weui-cell__desc .ellipsis {
  width: calc(100% - 80px);
}

.weui-tab__panel {
  padding-bottom: 116rpx
}